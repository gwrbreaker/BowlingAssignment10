@model IEnumerable<Teams>

<a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Home"
   asp-route-teams="">
    Home

<!--This is where the button component functionality is set for each team name button-->
@foreach (var team in Model)
{
    <a class="btn btn-block btn-outline-secondary">
        <form asp-action="GetTeam">
            <input type="hidden" name="teamname" value="@team.TeamName" / >
            <button id="link-@team.TeamName" class="btn" onclick="HighlightLink('id')" type="submit">@team.TeamName</button>
        </form>
    </a>
}
</a>